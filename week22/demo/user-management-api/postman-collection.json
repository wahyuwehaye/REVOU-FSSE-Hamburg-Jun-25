		{
			"name": "Users - CRUD Operations",
			"item": [
				{
					"name": "Create User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"SecurePass123!\",\n  \"age\": 30,\n  \"phone\": \"+1-555-123-4567\",\n  \"address\": {\n    \"street\": \"123 Main Street\",\n    \"city\": \"New York\",\n    \"state\": \"NY\",\n    \"zipCode\": \"10001\",\n    \"country\": \"USA\"\n  }\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/users",
							"host": ["{{baseUrl}}"],
							"path": ["users"]
						},
						"description": "Create a new user with complete validation.\n\n**Validation Rules:**\n- firstName: min 2 chars\n- lastName: min 2 chars\n- email: valid email format, will be lowercased\n- password: min 8 chars, must contain uppercase, lowercase, number/special char (will be hashed)\n- age: between 18-120\n- phone: international format\n- address: nested DTO validation"
					},
					"response": []
				},
				{
					"name": "Get All Users",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/users",
							"host": ["{{baseUrl}}"],
							"path": ["users"]
						},
						"description": "Retrieve all users (passwords are excluded from response)"
					},
					"response": []
				},
				{
					"name": "Get All Users with Pagination",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/users?page=1&limit=10",
							"host": ["{{baseUrl}}"],
							"path": ["users"],
							"query": [
								{
									"key": "page",
									"value": "1",
									"description": "Page number (default: 1)"
								},
								{
									"key": "limit",
									"value": "10",
									"description": "Items per page (default: 10, max: 100)"
								}
							]
						},
						"description": "Get paginated users with page and limit query parameters"
					},
					"response": []
				},
				{
					"name": "Get User by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/users/1",
							"host": ["{{baseUrl}}"],
							"path": ["users", "1"]
						},
						"description": "Get a single user by ID. Uses ParseIntPipe to validate ID is a number."
					},
					"response": []
				},
				{
					"name": "Update User",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"firstName\": \"Jane\",\n  \"email\": \"jane.doe@example.com\",\n  \"age\": 28\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/users/1",
							"host": ["{{baseUrl}}"],
							"path": ["users", "1"]
						},
						"description": "Update user (partial update). All fields are optional. Email will be validated for uniqueness."
					},
					"response": []
				},
				{
					"name": "Delete User (Soft Delete)",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/users/1",
							"host": ["{{baseUrl}}"],
							"path": ["users", "1"]
						},
						"description": "Soft delete a user (sets deletedAt timestamp, doesn't remove from database)"
					},
					"response": []
				}
			]
		},
